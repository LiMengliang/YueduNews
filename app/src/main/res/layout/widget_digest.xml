<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/single_image_digest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/single_image_digest_image"
            style="@style/digestImage"/>
        <RelativeLayout
            android:id="@+id/news_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/single_image_digest_image"
            android:paddingLeft="8dp">
            <TextView
                android:id="@+id/single_image_digest_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/media_size_text"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/single_image_digest_digest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/single_image_digest_title"
                android:paddingTop="10dp"
                android:textSize="@dimen/small_size_text"
                android:lines="2"
                android:textColor="@color/black_overlay"/>
            <TextView
                android:id="@+id/single_image_digest_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/single_image_digest_digest"
                android:singleLine="true"
                android:textSize="@dimen/small_size_text"
                android:textColor="@color/black_overlay"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/multi_image_digest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/multi_image_digest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/media_size_text"
            android:textColor="@color/black"/>
        <LinearLayout
            android:id="@+id/image_row"
            android:layout_below="@id/multi_image_digest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/multi_image_digest_image_a"
                style="@style/digestImage"/>
            <GridView
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/multi_image_digest_image_b"
                style="@style/digestImage"/>
            <GridView
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/multi_image_digest_image_c"
                style="@style/digestImage"/>
        </LinearLayout>
        <TextView
            android:id="@+id/multi_image_digest_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_row"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:textSize="@dimen/small_size_text"
            android:textColor="@color/black_overlay"/>
    </RelativeLayout>
</FrameLayout>